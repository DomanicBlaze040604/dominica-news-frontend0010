# Production Environment Configuration for Railway/Docker
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/dominica-news

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3001

# Logging Configuration (Production-friendly)
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
ENABLE_CONSOLE_LOGGING=true
LOG_DIRECTORY=/tmp/logs

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (Disable in production if no persistent storage)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/tmp/uploads

# Maintenance Mode
MAINTENANCE_MODE=false

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Performance
RESPONSE_TIME_ENABLED=true