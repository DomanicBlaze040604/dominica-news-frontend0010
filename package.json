{
  "name": "dominica-news-backend",
  "version": "1.0.0",
  "description": "Backend API for Dominica News CMS",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node start-production.js",
    "start:dev": "node dist/server.js",
    "prestart": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker build -t dominica-news-api .",
    "docker:run": "docker run -p 5000:5000 --env-file .env dominica-news-api",
    "seed": "ts-node src/scripts/seedDatabase.ts",
    "seed:prod": "node dist/scripts/seedDatabase.js",
    "seed:sample": "ts-node src/scripts/seedSampleData.ts",
    "seed:content": "ts-node src/scripts/seedSampleContent.ts",
    "create-indexes": "ts-node src/scripts/createIndexes.ts",
    "create-indexes:prod": "node dist/scripts/createIndexes.js",
    "optimize-db": "ts-node src/scripts/optimizeDatabase.ts",
    "optimize-db:prod": "node dist/scripts/optimizeDatabase.js"
  },
  "keywords": [
    "news",
    "cms",
    "api",
    "express",
    "mongodb"
  ],
  "author": "Ammar Siddiqui",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "response-time": "^2.3.4",
    "sharp": "^0.33.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/response-time": "^2.3.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
